<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientintro"
    tools:context=".Fragments.FragmentPrivate">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="Private Videos"
         android:textColor="@color/primary"
         android:textStyle="bold"
         android:textSize="17sp"
         android:layout_gravity="center"
         android:layout_marginVertical="10dp"/>
      <TextView
          android:id="@+id/tvPrivate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="Please Contact to admin from your profile Screen and request him to give access to you for private Videos"
         android:textColor="@color/white"
         android:textStyle="bold"
          android:gravity="center"
          android:visibility="gone"
         android:textSize="17sp"
         android:layout_gravity="center"
         android:layout_marginVertical="10dp"/>
      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/rvPrivateVideos"/>

   </LinearLayout>


</FrameLayout>