<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_m"
    tools:context=".Ui.ActivitySignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/icon_transparent"
                android:layout_height="80dp"
                android:alpha="1"
                android:src="@drawable/icon_transaparent"/>
            <TextView
                android:id="@+id/createAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/icon_transparent"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />




        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">



            <!-- Name -->
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tv2"
                android:textColor="@color/PrimaryVariant"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp" />
               <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etname"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tv3"
                android:textColor="@color/PrimaryVariant"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp" />
               <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etemail"
                android:text="Password"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tv4"
                android:textColor="@color/PrimaryVariant"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp" />
            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPassword"
                android:text="ConfirmPassword"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etCPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tv5"
                android:textColor="@color/PrimaryVariant"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etCPassword"
                android:text="SIGN UP"
                android:textStyle="bold"
                android:textColorHint="@color/white"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primary" />

            <!-- Space view for bottom margin -->
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/btnsignup" />

            <!-- Sign In text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN IN"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
