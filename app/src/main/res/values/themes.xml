<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UserurduBolo" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FEC10F</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#E40E1B35</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Base.Theme.UserurduBolo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Base.Theme.UserurduBolo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Base.Theme.UserurduBolo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="BottomNavigationStyle">
        <item name="android:itemTextAppearance">@style/BottomNavigationTextAppearance</item>
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Create a custom style for your activity background -->
    <style name="AppTheme" parent="Base.Theme.UserurduBolo">
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
